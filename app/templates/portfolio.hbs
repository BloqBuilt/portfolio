<h2 id="title">Portfolio: {{name}}</h2>

<hr/>

<dl>
  <dt>Total Value</dt>
  <dd>{{format-currency totalValue}}</dd>
</dl>

<hr/>

<h3>Allocations</h3>

{{#if allocations}}
  <table class="table-striped">
    <thead>
      <tr>
        <th>Asset Class</th>
        <th>Target Weight</th>
      </tr>
    </thead>
    <tbody>
      {{#each allocation in allocations}}
        <tr>
          <td>
            {{#link-to 'asset_class' allocation.assetClass}}
              {{allocation.assetClass.name}}
            {{/link-to}}
          </td>
          <td>{{format-percentage allocation.weight}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
<p>No allocations.</p>
{{/if}}

<h3>Lots</h3>

{{#if lots}}
  <table class="table-striped">
    <thead>
      <tr>
        <th>Fund</th>
        <th>Date Acquired</th>
        <th>Date Sold</th>
        <th>Quantity</th>
        <th>Share Cost</th>
        <th>Total Cost</th>
        <th>Market Value or Proceeds</th>
        <th>Gain / Loss</th>
      </tr>
    </thead>
    <tbody>
      {{#each lot in lots}}
        <tr>
          <td>{{lot.fund.symbol}}</td>
          <td>{{moment lot.dateAcquired 'YYYY-MM-DD'}}</td>
          <td>
            {{#if lot.dateSold}}
              {{moment lot.dateSold 'YYYY-MM-DD'}}
            {{/if}}
          </td>
          <td>{{lot.quantity}}</td>
          <td>{{format-currency lot.shareCost}}</td>
          <td>{{format-currency lot.totalCost}}</td>
          <td>
            {{#if lot.isOpen}}
              {{format-currency lot.marketValue}}
            {{else}}
              {{format-currency lot.proceeds}}
            {{/if}}
          </td>
          <td>{{format-currency lot.valueChange}}</td>
        </tr>
      {{else}}
      {{/each}}
    </tbody>
  </table>
{{else}}
<p>No lots recorded.</p>
{{/if}}
